# Local development environment (copy to backend/.env.local; never commit real values).
# This file MUST point to your local Postgres clone (not Supabase).

APP_ENV=local
PORT=8080
FRONTEND_BASE_URL=http://localhost:3000

# Local Postgres (Docker example uses port 54322)
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/aveli_local

# Optional: keep Supabase URL/keys if you still use cloud Auth/Storage locally.
# IMPORTANT: do NOT set SUPABASE_DB_URL here (it is remote and will be blocked by default).
SUPABASE_PROJECT_REF=your-project-ref
SUPABASE_URL=https://${SUPABASE_PROJECT_REF}.supabase.co
SUPABASE_PUBLISHABLE_API_KEY=sb_publishable_replace
SUPABASE_SECRET_API_KEY=sb_secret_replace
SUPABASE_DB_URL=

# Auth + media
JWT_SECRET=generate-64-hex-secret
MEDIA_SIGNING_SECRET=generate-64-hex-secret
MEDIA_SIGNING_TTL_SECONDS=600
LESSON_MEDIA_MAX_BYTES=2147483648

# Stripe (use test keys in local)
STRIPE_KEYSET=test
STRIPE_TEST_SECRET_KEY=sk_test_replace
STRIPE_TEST_PUBLISHABLE_KEY=pk_test_replace
STRIPE_TEST_WEBHOOK_SECRET=whsec_replace
STRIPE_TEST_WEBHOOK_BILLING_SECRET=whsec_replace

# LiveKit (optional)
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=
LIVEKIT_WS_URL=
LIVEKIT_API_URL=
