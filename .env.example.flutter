# Flutter client environment template (local dev).
# Copy to frontend/.env.local and load via --dart-define-from-file or DOTENV_FILE.

API_BASE_URL=http://127.0.0.1:8080
# Android emulator cannot reach 127.0.0.1 on host; use http://10.0.2.2:8080 there.

# Supabase client auth
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_PUBLISHABLE_API_KEY=replace-with-publishable-key
# Legacy alias (optional)
# SUPABASE_PUBLIC_API_KEY=replace-with-publishable-key

# Stripe PaymentSheet/Checkout (publishable only)
STRIPE_PUBLISHABLE_KEY=pk_test_replace
STRIPE_MERCHANT_DISPLAY_NAME=Aveli

# OAuth redirects (Flutter)
OAUTH_REDIRECT_WEB=http://localhost:4003/auth/callback
OAUTH_REDIRECT_MOBILE=aveliapp://auth/callback

# Feature flags
SUBSCRIPTIONS_ENABLED=true
IMAGE_LOGGING=true
